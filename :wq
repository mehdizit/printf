
#include <stdio.h>
#include <stdarg.h>
#include "holberton.h"

/**
* checkType - check the char after % in the copyFormat str
* @copyFormat: str
* @int: index if char
* Return: void
*/
char *checkType(int i, char *format, va_list vaList)
{
	unsigned int j;
	int ch;
	int nb;
	char *str, *arg;

	str = strCopyAlloc(format);
	switch (format[i])
	{
		case 'c':
			{
				ch = va_arg(vaList, int);
				{
					printf("=\n" );
					str = concatCharAt(i - 1, str, ch);
					printf(" Ctrs = %s\n",str);
					break;
				}
			}
		case 'i':
			{
				nb = va_arg(vaList, int);
				break;
			}
		case 'd':
			{
				nb = va_arg(vaList, int);
				break;
			}
		case 's':
			{
				arg = va_arg(vaList, char*);
				if (str)
				{
					str = concatAt(i - 2, str, arg);
					printf(" str = %s\n", str);
					break;
				}
				else
					printf("(nil)");
				break;
			}
		default:
			break;

	}

	return (str);
}


int _printf(const char *format, ...)
{
	unsigned int i = 0;
	va_list vaList;
	char *copyFormat;
	copyFormat = strCopyAlloc(format);
	va_start(vaList, format);
	i = 0;
	while (format[i])
	{
		if (format[i] == '%')
			copyFormat = checkType(i + 1, copyFormat, vaList);

		i++;
	}
	printf("pf = %s \n", copyFormat);
	va_end(vaList);
	return (0);
}
